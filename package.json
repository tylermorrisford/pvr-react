{
  "name": "pvr",
  "version": "1.0.0",
  "description": "peninsula vacation rentals",
  "main": "server.js",
  "scripts": {
    "server": "node server.js",
    "client": "npm run start",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'rental/*'\" \"npm run rental\"",
    "build": "node scripts/build.js",
    "seed": "node scripts/seedDb.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "heroku-postbuild": "cd rental && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tylermorrisford/pvr-react.git"
  },
  "author": "tylermorrisford",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tylermorrisford/pvr-react/issues"
  },
  "homepage": "https://github.com/tylermorrisford/pvr-react#readme",
  "dependencies": {
    "concurrently": "^5.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "moment": "^2.24.0",
    "moment-range": "^4.0.2",
    "mongoose": "^5.7.12",
    "nodemailer": "^6.4.1",
    "nodemon": "^2.0.2",
    "passport": "^0.4.0"
  }
}
